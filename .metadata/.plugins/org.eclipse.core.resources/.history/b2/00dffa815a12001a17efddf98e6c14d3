 package midterms;

import java.util.Arrays;
import java.util.Random;

public class Lab {

	public static void main(String[] args) {
		//Initiate the array of integer with 15 elements		
		int[] numbers = new int[15];
		//Assign random number between -5 to 5
		for (int i = 0; i < numbers.length; i++) {
			numbers[i] = new Random().nextInt(11)-5;
			
		}
		//Output the array as string in the console
		System.out.println(Arrays.toString(numbers));
		
		//a. find the largest number in this array
		int largest = numbers[0];
		for(int i = 0 ; i < numbers.length; i++) {
			if(largest < numbers[i]) {
				largest = numbers[i];
			}
		}
		System.out.println(largest);
		//b. find the smallest number in this array
		int smallest = numbers[0];
		for(int i = 0; i < numbers.length; i++) {
			if(smallest > numbers[i]) {
				smallest = numbers[i];
			}
		}
		System.out.println(smallest);
		//c. display how many zero appear in this array
		//if no zero found display "zero not found"
		
		//d. count how many negative number appear in this array
		
		//e. count how many positive number appear in this array
	}

}
