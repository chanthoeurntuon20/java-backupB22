
public class Answer2_random {

	public static void main(String[] args) {
		
	      int number[] = new int[15];
	      String index = "";
	      int count =0;
	      for (int i = 0; i < number.length; i++) {
	        int random = (int)(Math.random() * 11 + 0);
	        number[i] = random;
	       System.out.print(number[i] + " ");
	       if(number[i] == 5) {
	    	   count++;
	    	   index = index + i;
	       }
	       
	      }
	      System.out.println(" ");
	     if(count != 0) {
	    	 System.out.println(" There are " + count + " "+ "of number 5 found in index as bellow. ");
	     }
	     
	      System.out.println("Index" + index:);
	}

}
